{
  "name": "express-checkins-app",
  "version": "1.0.0",
  "description": "Best-practice Express app to ingest check-in logs into Postgres with a simple web UI.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node src/migrate.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check:env": "node -e \"import('./src/config/env.js').then(()=>console.log('env ok')).catch(e=>{console.error(e);process.exit(1)})\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.5",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8",
    "morgan": "^1.10.0",
    "express-handlebars": "^7.1.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  }
}